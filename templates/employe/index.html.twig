<a href="{{ path('employe_new') }}" class="btn btn-primary">Ajouter un employer</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Salaire</th>
                <th>Email</th>
