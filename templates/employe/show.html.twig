{% extends 'base.html.twig' %}

{% block title %}Employe{% endblock %}

{% block body %}
   

   <div class="container mb-5">
     <h1>Detail sur l'employe</h1>
       
       <div class="row">
        <div class="col-lg-6">
          <p>Prenom
          {{ employe.prenom}}
           </p>
          <p>Nom :
          {{employe.nom }}
        </p>
          <p>Email :
          {{employe.email }}  
          </p>
          <p>Telephone:
          {{employe.telephone }}  
           </p>

           <p>salaire:
          {{employe.salaire }}  
           </p>

           <p>Post:
          {{employe.post }}  
           </p>

           <p>Section:
          {{employe.section }}  
           </p>
           
          
        </div>


        <div class="col-lg-6">
       <img src="{{ vich_uploader_asset(employe, 'imageFile') }}" width="400px"; height="500px" > 

        </div>
       
       </div>

         <a href="{{ path('employe_index') }}">Retour sur la liste des employes</a><br>

     <div class="row">
      <div class="col-lg-2"> <a href="{{ path('employe_edit', {'id': employe.id}) }}" class="btn btn-primary">Modifier</a>
</div>
    <div class="col-lg-2">
    {{ include('employe/_delete_form.html.twig') }}
     </div>
     </div>


   </div>

  
{% endblock %}
